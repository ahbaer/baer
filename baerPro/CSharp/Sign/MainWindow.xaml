<Window x:Class="Sign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sign"
        mc:Ignorable="d"
        Title="baer" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF857373" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnSign" Content="签退" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Margin="106,101,0,0" Click="btnSign_Click" Height="69" FontFamily="LiSu" FontSize="28"/>
        <Button x:Name="btnRemindNext" Content="稍后提醒" HorizontalAlignment="Right" VerticalAlignment="Top" Width="132" Margin="0,101,101.4,0" Click="btnRemindNext_Click" Height="69" RenderTransformOrigin="-0.067,1.563" FontFamily="LiSu" FontSize="28"/>

    </Grid>
</Window>
